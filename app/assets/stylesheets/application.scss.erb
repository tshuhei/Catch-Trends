/* reset.cssのインポート */
@import "reset";

body{
    font-family: 'メイリオ', 'Meiryo','ＭＳ ゴシック','Hiragino Kaku Gothic ProN','ヒラギノ角ゴ ProN W3',sans-serif;
}

.header-container{
    margin: 20px 0px;
    display: flex;
    justify-content: space-between;
}

.header-img{
    height: 40px;
    padding: 0 20px;
    width: auto;
}

.header-left{
    display: flex;
}

.header-title{
    font-size: 30px;
    margin: 0px;
    height: 40px;
    line-height: 40px;
    color: white;
    font-weight: bold;
}

.header-title-black{
    font-size: 30px;
    margin: 0px;
    height: 40px;
    line-height: 40px;
    color: black;
    font-weight: bold;
}

.header-right{
    display: flex;
}

.footer-container{
    padding: 10px 0px;
    display: flex;
    justify-content: center;
    color: white;
}

.footer-container-instagram{
    padding: 10px 0px;
    display: flex;
    justify-content: center;
    color: white;
    background: url("<%= asset_path('instagram-back.jpg') %>");
    background-size: cover;
}