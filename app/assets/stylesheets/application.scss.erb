/* reset.cssのインポート */
@import "reset";
/* bootstrapのインポート */
@import "bootstrap";

body{
    font-family: 'メイリオ', 'Meiryo','ＭＳ ゴシック','Hiragino Kaku Gothic ProN','ヒラギノ角ゴ ProN W3',sans-serif;
}

.header-container{
    margin: 20px 0px;
    display: flex;
    justify-content: space-between;
}

.header-img{
    height: 40px;
    padding: 0 20px;
    width: auto;
}

.header-left{
    display: flex;
}

.header-title{
    font-size: 30px;
    margin: 0px;
    height: 40px;
    line-height: 40px;
    color: white;
    font-weight: bold;
}

.header-title-black{
    font-size: 30px;
    margin: 0px;
    height: 40px;
    line-height: 40px;
    color: black;
    font-weight: bold;
}

.header-right{
    display: flex;
}

.footer-container{
    padding: 10px 0px;
    display: flex;
    justify-content: center;
    color: white;
}

.footer-container-instagram{
    padding: 10px 0px;
    display: flex;
    justify-content: center;
    color: white;
    background: url("<%= asset_path('instagram-back.jpg') %>");
    background-size: cover;
}

.top-wrapper{
  display: inline-block;
  height: auto;
  background: linear-gradient(-45deg,#000000,#cccccc);
  opacity: 0.7px;
  height: 700px;
}

.top-wrapper-contents{
  padding-top: 60px;
}

.top-wrapper h1{
  margin-top: 40px;
  font-size: 70px;
  font-weight: bold;
  color: white;
}

.top-under h2{
  color: white;
  font-size: 40px;
  font-weight: bold;
  padding-bottom: 30px;
}

.fadein {
 opacity : 0;
 transform : translate(0, 45px);
 transition : all 4000ms;
}

.fadein.effect-scroll {
 opacity : 1;
 transform : translate(0, 0);
}

.top-under p{
  font-size: 20px;
  color: white;
  opacity: 0.8;
}


.sns-icons{
  height: 150px;
}


.instagram-image{
  background: url("<%= asset_path('instagram-back.jpg') %>");
}

.sns-image{
  opacity: 0.8;
  width: 50%;
  height: auto;
  position: absolute;
    top: 50%;
    left: 50%;
      transition-duration: 0.8s;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
}

.sns-image:hover{
  opacity: 1;
  transform: scale(1.6,1.6) translate(-30%, -30%);
  cursor: pointer;
}



@media (max-width: 576px ) {
  .sns-icons{
    height: 600px;
    margin: 0 120px;
  }

  .col-sm-2{
    margin-bottom: 30px;
  }

}









footer{
  width: 100%;
}
